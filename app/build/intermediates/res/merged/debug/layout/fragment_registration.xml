<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name_text"
        android:id="@+id/name_textview"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/name"
        android:ems="10"
        android:id="@+id/name_edit_text"
        android:layout_below="@+id/name_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/email_text"
        android:id="@+id/email_text_view"
        android:layout_below="@+id/name_edit_text"
        android:layout_alignStart="@+id/name_textview"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:ems="10"
        android:id="@+id/email_edit_text"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/email_text_view"
        android:layout_alignStart="@+id/name_edit_text"
        android:background="#ffffff" /> />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conf_text"
        android:id="@+id/reg_confirm"
        android:layout_below="@+id/email_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
</RelativeLayout><!-- From: file:/home/lastminute84/AndroidStudioProjects/WindSpeedConverterApplication/app/src/main/res/layout/fragment_registration.xml -->